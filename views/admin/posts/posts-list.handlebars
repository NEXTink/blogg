<div class="width-75">
    <h1>Posts</h1>
    <div class="table-holder">
        <table class="table">
            <thead>
            <tr>
                <th>
                    id
                </th>
                <th>
                    title
                </th>
                <th>
                    description
                </th>
                <th>
                    file
                </th>
                <th>
                    date
                </th>
            </tr>
            </thead>
            <tbody>
            {{#each posts}}
            <tr>

                <td>{{_id}}</td>
                <td>{{title}}</td>
                <td>{{body}}</td>
                <td>
                    <img alt="{{file}}"  class="table-img" src="./uploads/posts/{{file}}"/>
                </td>
                <td>{{date}}</td>
                <td>
                   <div class="form-options-btn">
                       <a class="btn-sm btn-sm-success">Edit</a>
                       <form>
                           <a class="btn-sm btn-sm-red">Delete</a>
                       </form>
                   </div>
                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>